@model IEnumerable<MVCproject.Models.ViewModel.UserInvoiceVM>

<div class="container mt-4">
    <h2 class="mb-4">User Invoices</h2>
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.InvoiceDate)</th>
                <th>@Html.DisplayNameFor(model => model.Payment)</th>
                <th>@Html.DisplayNameFor(model => model.Bill)</th>
                <th>@Html.DisplayNameFor(model => model.InvoiceId)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.InvoiceDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Payment)</td>
                    <td>@Html.DisplayFor(modelItem => item.Bill)</td>
                    <td>@Html.DisplayFor(modelItem => item.InvoiceId)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
